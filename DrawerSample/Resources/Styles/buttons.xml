<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_primary" target="UIButton">
        <setter property="backgroundColor" referenceType="color" reference="primary_background" />
        <setter property="titleLabel?.font" referenceType="font" reference="button_primary" />
        <setter property="contentEdgeInsets" value="12,12,12,12" />
        <setter property="tintColor" value="#ffffff" />
        <setter property="layer.cornerRadius" value="5" />
        <setter property="layer.shadowColor" referenceType="cg-color" reference="default_shadow" />
        
        <method property="heightAnchor" value="44.0" />
    </style>

    <style name="button_secondary" parent="button_primary" target="UIButton">
        <setter property="backgroundColor" referenceType="color" reference="secondary_background" />
        <setter property="titleLabel?.font" referenceType="font" reference="button_primary" />
        <setter property="contentEdgeInsets" value="12,12,12,12" />
        <setter property="tintColor" value="#ffffff" />
        <setter property="layer.cornerRadius" value="5" />
    </style>
</resources>
